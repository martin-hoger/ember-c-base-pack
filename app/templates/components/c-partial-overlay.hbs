{{#if visible}}
  <div class="partial-overlay" style={{style}} onmouseenter={{action "contentFocused" true}} onmouseleave={{action "contentFocused" false}}>
    <i class="partial-overlay-close remove circle icon" onclick={{action "close"}} onmouseenter={{action "leftPanelFocused" true}} onmouseout={{action "leftPanelFocused" false}}></i>
    <div class="partial-overlay-left-panel" onmouseenter={{action "leftPanelFocused" true}} onmouseout={{action "leftPanelFocused" false}}></div>
    <div class="partial-overlay-content">
      {{!--
      <i class="partial-overlay-close remove circle icon" onclick={{action "close"}}></i>
      --}}
      {{yield}}
    </div>
  </div>
  <div class="partial-overlay-overlay" onmouseenter={{action "overlayFocused" false}}></div>
{{/if}}
