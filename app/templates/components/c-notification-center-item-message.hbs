{{#if (or this.params.title this.params.message)}}

  {{#if this.params.displayProgess}}
    {{!-- Notification message --}}

    <div class="ui icon message">
      {{#if this.params.loading}}
        <i class="notched circle loading icon"></i>
      {{/if}}
      <div class="content">
        {{#if this.params.title}}
          <div class="header">
            {{this.params.title}}
          </div>
        {{/if}}
        {{#if this.params.message}}
          {{this.params.message}}
        {{/if}}
      </div>
    </div>

  {{else}}
    {{!-- Notification message - final content after processing --}}

    {{#if this.params.titleFinal}}
      <div class="ui icon message">
        <i class="check circle icon"></i>
        <div class="content">
          {{#if this.params.title}}
            <div class="header">
              {{this.params.title}}
            </div>
          {{/if}}
          {{this.params.titleFinal}}
        </div>
      </div>
    {{/if}}

  {{/if}}

{{/if}}

