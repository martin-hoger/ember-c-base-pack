{{#if dialog.showPrompt}}
  {{#transition-group transitionClass="dialog-fade" id="dialog"}}

    <div class="dialog-background" {{action "cancel"}}></div>

    <div class="dialog-window">
      <div class="dialog-window-close" {{action "cancel"}}>
        <i class="x icon" aria-hidden="true"></i>
      </div>

      <div class="dialog-window-title">
        {{dialog.title}}
      </div>

      {{#if dialog.message}}
        <div class="dialog-window-message">
          {{dialog.message}}
        </div>
      {{/if}}

      <div class="dialog-window-actions">
        {{#if (eq dialog.type "confirm")}}
          <button {{action "confirm"}}>
            {{#if dialog.confirmText}}
              {{dialog.confirmText}}
            {{else}}
              {{t "form.confirm"}}
            {{/if}}
          </button>
          <button {{action "cancel"}}>
            {{#if dialog.cancelText}}
              {{dialog.cancelText}}
            {{else}}
              {{t "form.cancel"}}
            {{/if}}
          </button>
        {{/if}}

        {{#if (eq dialog.type "alert")}}
          <button {{action "cancel"}}>
            {{t "form.ok"}}
          </button>
        {{/if}}
      </div>
    </div>

  {{/transition-group}}
{{/if}}

