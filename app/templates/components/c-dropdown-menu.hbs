<div
    class="menu-dropdown-button"
    onmouseout={{action "onFocus"}}
    onmouseover={{action "overFocus"}}
    {{action (toggle "displayMenu" this)}}
    style={{buttonStyle}}
>
  {{#if button}}
    {{c-form-button label=label icon=icon}}
  {{else}}
    <i class="{{icon}} icon"></i>
    {{#if label}}
      <label>{{label}}</label>
    {{/if}}
  {{/if}}
</div>

{{#if displayMenu}}
  {{#transition-group transitionClass="menu-dropdown-fade" class=(concat "menu-dropdown " menuClass)}}
    <div
        class="ui vertical menu menu-dropdown-lines"
        onmouseout={{action "onFocus"}}
        onmouseover={{action "overFocus"}}
    >
      {{yield}}
    </div>
  {{/transition-group}}
{{/if}}
